<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #ffffff, #C5ADC5);
        }

        h1, h2 {
            text-align: center;
        }

        table {
              /* background: linear-gradient(to right, #B2B5E0, #C5ADC5); */
            width: 300vh;
            border: 1px solid #ccc;
           /* border-radius: 30p    x; */
            margin: 20px auto;
            max-width: 800px;
            /* box-shadow: #676eda; */
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
          
        }

        th {
            background-color: #fafafa;
        }

        tr:hover {
              background: linear-gradient(to right, #a396e0, #C5ADC5);
        }
    </style>
</head>
<body>
    <h1>User Dashboard</h1>
    <h2>Job Applications</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Place</th>
            <th>Mobile</th>
            <th>Job Description</th>
            <th>Expected Salary</th>
            <th>Proof Description</th>
            <th>Submitted At</th>
        </tr>
        <% jobApplications.forEach((application) => { %>
            <tr>
                <td><%= application.name %></td>
                <td><%= application.place %></td>
                <td><%= application.mobile %></td>
                <td><%= application.jobDescription %></td>
                <td><%= application.expectedSalary %></td>
                <td><%= application.proofDescription %></td>
                <td><%= application.submittedAt %></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
