<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #dfc1d5, #ddf8fe);
        }

        h1, h2 {
            text-align: center;
            color: #333;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border: 1px solid #ccc;
            margin: 20px auto;
            max-width: 800px;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #fafafa;
            color: #333;
        }

        tr:hover {
            background: linear-gradient(to right, #a396e0, #C5ADC5);
            color: #fff;
        }

        .animation {
            animation: fade-in 1s ease-in-out;
        }

        @keyframes fade-in {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <h1>User Dashboard</h1>
    <h2 class="animation">Job Applications</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Place</th>
            <th>Mobile</th>
            <th>Job Description</th>
            <th>Expected Salary</th>
            <th>Proof Description</th>
            <th>Submitted At</th>
        </tr>
        <% jobApplications.forEach((application) => { %>
            <tr class="animation">
                <td><%= application.name %></td>
                <td><%= application.place %></td>
                <td><%= application.mobile %></td>
                <td><%= application.jobDescription %></td>
                <td><%= application.expectedSalary %></td>
                <td><%= application.proofDescription %></td>
                <td><%= application.submittedAt %></td>
            </tr>
        <% }); %>
    </table>

    <h2 class="animation">Investor Proposals</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone No</th>
            <th>Idea Description</th>
            <th>Marginal Profit</th>
            <th>Total Investment</th>
            <th>My Investment</th>
            <th>Proof</th>
            <th>Submitted At</th>
        </tr>
        <% proposals.forEach((proposal) => { %>
            <tr class="animation">
                <td><%= proposal.name %></td>
                <td><%= proposal.email %></td>
                <td><%= proposal.phoneNo %></td>
                <td><%= proposal.ideaDescription %></td>
                <td><%= proposal.marginalProfit %></td>
                <td><%= proposal.totalInvestment %></td>
                <td><%= proposal.myInvestment %></td>
                <td><%= proposal.proof %></td>
                <td><%= proposal.submittedAt %></td>
            </tr>
        <% }); %>
    </table>

    <script>
        // Add your JavaScript code here for interactive features
    </script>
</body>
</html>
