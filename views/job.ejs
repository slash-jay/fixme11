<!-- job.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Listings</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #B2B5E0, #C5ADC5);
        }
        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .job-listing {
            margin-bottom: 20px;
            padding: 20px;
            background-color: #e0e0e0;
            border-radius: 5px;
        }
        .job-heading {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .job-details {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Job Listings</h1>
    <% if (jobApplications.length > 0) { %>
        <% jobApplications.reverse().forEach((job) => { %>
            <div class="job-listing">
                <div class="job-heading"><%= job.name %></div>
                <div class="job-details">
                    <strong>Place:</strong> <%= job.place %><br>
                    <strong>Mobile:</strong> <%= job.mobile %><br>
                    <strong>Job Description:</strong> <%= job.jobDescription %><br>
                    <strong>Expected Salary:</strong> <%= job.expectedSalary %><br>
                    <strong>Proof Description:</strong> <%= job.proofDescription %><br>
                    <strong>Submitted At:</strong> <%= job.submittedAt %><br>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>No job applications found.</p>
    <% } %>
</div>

</body>
</html>
